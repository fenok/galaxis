{
    "compilerOptions": {
        "target": "es2019",
        "moduleResolution": "node",
        "strict": true,
        "jsx": "react",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "allowSyntheticDefaultImports": true,
        "module": "es6",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "outDir": "./dist",
        "declaration": true,
        "incremental": true
    },
    "include": ["src"],
    "exclude": ["__tests__"]
}
